{
  "name": "crashmax.ru",
  "version": "1.0.0",
  "description": "crashmax.ru",
  "type": "module",
  "license": "MIT",
  "homepage": "https://github.com/crashmax-dev/crashmax.ru#readme",
  "bugs": {
    "url": "https://github.com/crashmax-dev/crashmax.ru/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/crashmax-dev/crashmax.ru.git"
  },
  "scripts": {
    "start": "npm run build && cross-env NODE_ENV=production node dist/app.js",
    "dev": "concurrently --prefix none \"npm run dev:client\" \"npm run dev:server\"",
    "dev:server": "npm run prebuild && tsc-watch --compiler typescript/bin/tsc -p tsconfig.build.json --onSuccess \"cross-env NODE_ENV=development node -r tsconfig-paths/register --inspect dist/app.js\"",
    "dev:client": "npm run prebuild && cd client && npm run watch",
    "build": "tsc -p tsconfig.build.json && cd client && npm run build",
    "test": "tsc -p tsconfig.build.json && tap --node-arg=--loader=ts-node/esm --node-arg=--no-warnings",
    "lint": "eslint --ext ts .",
    "lint:fix": "eslint --fix --ext ts .",
    "prebuild": "del-cli dist client/dist",
    "prepare": "husky install",
    "prepublishOnly": "npm run build",
    "deploy": "npm run build && node scripts/deploy.js",
    "postinstall": "prisma generate"
  },
  "devDependencies": {
    "@crashmax/eslint-config": "^1.1.0",
    "@sindresorhus/tsconfig": "^2.0.0",
    "@types/node": "^17.0.41",
    "@types/nodemailer": "^6.4.4",
    "@types/tap": "^15.0.7",
    "concurrently": "^7.2.1",
    "cross-env": "^7.0.3",
    "del-cli": "^4.0.1",
    "deploy-toolkit": "^0.1.1",
    "husky": "^8.0.1",
    "node-ssh": "^12.0.4",
    "prisma": "^3.15.0",
    "tap": "^16.2.0",
    "tsc-watch": "^5.0.3",
    "tsconfig-paths": "^4.0.0",
    "tsx": "^3.4.2",
    "typescript": "^4.6.4"
  },
  "dependencies": {
    "@fastify/autoload": "^5.0.0",
    "@fastify/env": "^4.0.0",
    "@fastify/sensible": "^4.1.0",
    "@fastify/static": "^6.4.0",
    "@fastify/type-provider-typebox": "^0.1.0-beta.1",
    "@prisma/client": "^3.15.0",
    "@sinclair/typebox": "^0.23.5",
    "fastify": "^4.0.0-rc.5",
    "fastify-plugin": "^3.0.1",
    "nodemailer": "^6.7.5",
    "pino-pretty": "^8.0.0"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "engines": {
    "node": "^12.20.0 || ^14.13.1 || >=16.0.0"
  }
}
