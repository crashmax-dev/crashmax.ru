{
  "name": "crashmax.ru",
  "version": "1.0.0",
  "description": "crashmax.ru",
  "type": "module",
  "license": "MIT",
  "homepage": "https://github.com/crashmax-dev/crashmax.ru#readme",
  "bugs": {
    "url": "https://github.com/crashmax-dev/crashmax.ru/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/crashmax-dev/crashmax.ru.git"
  },
  "scripts": {
    "dev:apps": "pnpm -r --parallel --filter=./apps/* run dev",
    "dev:packages": "pnpm -r --parallel --filter=./packages/* run dev",
    "build:apps": "pnpm -r --filter=./apps/* run build",
    "build:packages": "pnpm -r --filter=./packages/* run build",
    "format": "prettier --write --ignore-unknown '**/*.{ts,tsx,js,jsx}'",
    "test": "ava",
    "test:watch": "ava --watch"
  },
  "devDependencies": {
    "@crashmax/prettier-config": "^1.1.1",
    "@crashmax/tsconfig": "^1.0.1",
    "@types/node": "^18.0.5",
    "ava": "^4.3.1",
    "del-cli": "^4.0.1",
    "tsx": "^3.8.0",
    "typescript": "^4.7.4"
  },
  "packageManager": "pnpm@7.5.0",
  "engines": {
    "npm": "^7.0.0",
    "node": "^12.20.0 || ^14.13.1 || >=16.0.0"
  }
}
