{
  "name": "crashmax.ru-server",
  "version": "1.0.0",
  "description": "crashmax.ru-server",
  "type": "module",
  "exports": "./dist/index.js",
  "types": "dist",
  "files": [
    "dist",
    "!dist/**/*.js.map"
  ],
  "keywords": [],
  "license": "MIT",
  "homepage": "https://github.com/crashmax-dev/crashmax.ru-server#readme",
  "bugs": {
    "url": "https://github.com/crashmax-dev/crashmax.ru-server/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/crashmax-dev/crashmax.ru-server.git"
  },
  "scripts": {
    "start": "npm run build && cross-env NODE_ENV=production node dist/index.js",
    "dev": "concurrently -n client,server \"npm run dev:client\" \"npm run dev:server\"",
    "dev:server": "tsc-watch --compiler typescript/bin/tsc -p tsconfig.build.json --onSuccess \"cross-env NODE_ENV=development node -r tsconfig-paths/register --inspect dist/index.js\"",
    "dev:client": "cd client && npm run watch",
    "build": "tsc -p tsconfig.build.json && cd client && npm run build",
    "test": "ava",
    "test:watch": "ava --watch",
    "lint": "eslint --ext ts .",
    "lint:fix": "eslint --fix --ext ts .",
    "prebuild": "del-cli dist",
    "prepare": "husky install",
    "prepublishOnly": "npm run build",
    "mysql": "cd scripts && mysql-tunnel.sh"
  },
  "devDependencies": {
    "@crashmax/eslint-config": "^1.1.0",
    "@sindresorhus/tsconfig": "^2.0.0",
    "@types/node": "^17.0.23",
    "ava": "^4.1.0",
    "cross-env": "^7.0.3",
    "del-cli": "^4.0.1",
    "husky": "^7.0.4",
    "ts-node": "^10.7.0",
    "tsc-watch": "^4.6.2",
    "tsconfig-paths": "^3.14.1",
    "typescript": "^4.6.3"
  },
  "engines": {
    "node": "^12.20.0 || ^14.13.1 || >=16.0.0"
  },
  "dependencies": {
    "@fastify/static": "^5.0.1",
    "dotenv": "^16.0.0",
    "fastify": "^3.29.0",
    "mysql2": "^2.3.3",
    "node-ssh": "^12.0.4"
  }
}
