{
  "name": "crashmax.ru",
  "version": "1.0.0",
  "description": "crashmax.ru",
  "type": "module",
  "exports": "./dist/index.js",
  "types": "dist",
  "files": [
    "dist",
    "!dist/**/*.js.map"
  ],
  "keywords": [],
  "license": "MIT",
  "homepage": "https://github.com/crashmax-dev/crashmax.ru#readme",
  "bugs": {
    "url": "https://github.com/crashmax-dev/crashmax.ru/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/crashmax-dev/crashmax.ru.git"
  },
  "scripts": {
    "start": "npm run build && cross-env NODE_ENV=production node dist/index.js",
    "dev": "concurrently -n client,server \"npm run dev:client\" \"npm run dev:server\"",
    "dev:server": "npm run prebuild && tsc-watch --compiler typescript/bin/tsc -p tsconfig.build.json --onSuccess \"cross-env NODE_ENV=development node -r tsconfig-paths/register --inspect dist/index.js\"",
    "dev:client": "npm run prebuild && cd client && npm run watch",
    "build": "tsc -p tsconfig.build.json && cd client && npm run build",
    "test": "ava",
    "lint": "eslint --ext ts .",
    "lint:fix": "eslint --fix --ext ts .",
    "prebuild": "del-cli dist client/dist",
    "prepare": "husky install",
    "prepublishOnly": "npm run build",
    "mysql": "sh ./scripts/mysql-tunnel.sh",
    "deploy": "npm run build && node scripts/deploy.js"
  },
  "devDependencies": {
    "@crashmax/eslint-config": "^1.1.0",
    "@sindresorhus/tsconfig": "^2.0.0",
    "@types/node": "^17.0.35",
    "@types/nodemailer": "^6.4.4",
    "@types/tap": "^15.0.7",
    "ava": "^4.2.0",
    "concurrently": "^7.2.1",
    "cross-env": "^7.0.3",
    "del-cli": "^4.0.1",
    "deploy-toolkit": "^0.1.1",
    "husky": "^8.0.1",
    "node-ssh": "^12.0.4",
    "tap": "^16.2.0",
    "ts-node": "^10.8.0",
    "tsc-watch": "^5.0.3",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^4.6.4"
  },
  "engines": {
    "node": "^12.20.0 || ^14.13.1 || >=16.0.0"
  },
  "dependencies": {
    "@fastify/autoload": "^5.0.0",
    "@fastify/sensible": "^4.1.0",
    "@fastify/static": "^6.2.0",
    "dotenv": "^16.0.1",
    "fastify": "^4.0.0-rc.3",
    "fastify-plugin": "^3.0.1",
    "mysql2": "^2.3.3",
    "nodemailer": "^6.7.5"
  }
}
